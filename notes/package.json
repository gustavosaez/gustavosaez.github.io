    "@codemirror/view": "^6.36.5",
    "@dprint/formatter": "^0.4.1",
    "@dprint/markdown": "^0.18.0",
    "@headlessui/react": "^2.2.1",
    "@heroicons/react": "^2.2.0",
    "@lezer/highlight": "^1.2.1",
    "@tailwindcss/typography": "^0.5.16",
    "cmdk": "^1.1.1",
